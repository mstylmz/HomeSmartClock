<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ImageVIew to display our Course Image-->

            <ImageView
                android:id="@+id/imageViewClock"
                android:layout_width="@dimen/_48ssp"
                android:layout_height="@dimen/_48ssp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_12ssp"
                android:layout_marginBottom="@dimen/_12ssp"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/_4ssp"
                android:src="@drawable/clock_outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtClocknName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/imageViewClock"
                android:text="Mesut YÄ±lmaz"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewClock"
                app:layout_constraintStart_toEndOf="@+id/imageViewClock"
                app:layout_constraintTop_toTopOf="@+id/imageViewClock" />

            <ImageView
                android:id="@+id/imageViewnNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtClocknName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtClocknName"
                app:srcCompat="@drawable/wifi_off" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="0.6dp"
                android:background="@color/color_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!--Text View to display Course Name-->


            <!--Text VIew to display COurse Rating-->
            <!--Image used in present in drawable folder-->
        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>